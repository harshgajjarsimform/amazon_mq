# Basic broker configuration
primary_region     = "ap-south-1"
broker_name        = "rabbitmq-broker-multi-az"
engine_type        = "RabbitMQ"
engine_version     = "3.13"
host_instance_type = "mq.m5.large"
deployment_mode    = "CLUSTER_MULTI_AZ"
storage_type       = "efs"

# Network and security
publicly_accessible = false
security_groups     = ["sg-1234567891324"]
subnet_ids_primary  = ["subnet-1234567891324"] 
encryption_options  = {
  kms_key_id        = null
  use_aws_owned_key = true
}

# Authentication
authentication_strategy = "simple"
mq_username             = "activemq_user"
mq_password             = "asdfghjklzxcvbnm"
# secretsmanager_name = "my-mq-secret-78900000"
use_secret_manager      = false
recovery_window_in_days = 7
secretsmanager_tags     = {
  "env" = "test"
}

# Broker configuration
custom_config  = false
# mq_config_data = <<XML
# <?xml version="1.0" encoding="UTF-8"?>
# <broker xmlns="http://activemq.apache.org/schema/core">
#   <plugins>
#     <forcePersistencyModeBrokerPlugin persistenceFlag="true"/>
#     <statisticsBrokerPlugin/>
#     <timeStampingBrokerPlugin ttlCeiling="86400000" zeroExpirationOverride="86400000"/>
#   </plugins>
# </broker>
# XML

# Maintenance and operations
apply_immediately          = true
auto_minor_version_upgrade = true
maintenance_window_start_time = {
  day_of_week = "MONDAY"
  time_of_day = "03:00"
  time_zone   = "UTC"
}

# Logging
logs = {
  general = true
  audit   = false # Audit logs are not supported for RabbitMQ
}

# Tags
tags = {
  "env"  = "dev",
  "team" = "messaging"
}